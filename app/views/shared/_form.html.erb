<%# アイテム出品フォーム %>

<div class='accordion-category'>

<%= form_with model: @item, local: true do |f| %>
アイテム名<span class="red-btn">必須</span> <br />
<%= f.text_area :name, id:"item-name", placeholder:"商品名（必須 40文字まで）", maxlength:"40" %><br />
アイテムの画像<span class="red-btn">必須</span> <br />
<%= f.file_field :image, id:"item-image" %><br/>

アイテムの説明<br />
<%= f.text_area :item_text, id:"item-text" %><br />

カテゴリー<span class="red-btn">必須</span> <br />
<%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %><br />

交換方法<span class="red-btn">必須</span> <br />
<%= f.text_area :price, id:"item-price" %><br /><br/>

<%# 下部ボタン %>
<%= f.submit "出品する", class:"sell-btn" %><br /><br/>
</div>
<% end %>