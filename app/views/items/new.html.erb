<%# 新規投稿ページ %>

<%= render "shared/header" %>
<br/>
<h3>アイテムの出品ページ</h3>

<%= form_with model: @item, local: true do |f| %>

<p>アイテム名（40文字まで）<br />
<%= f.text_area :name, id:"item-name", placeholder:"40文字まで", maxlength:"40" %><br />

画像（なければサンプル画像が表示されます）<br />
<%= f.file_field :image, id:"item-image" %><br />

説明<br />
<%= f.text_area :item_text, id:"item-text" %><br />

カテゴリー<br/>
<%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %><br />

交換方法<br/>
<%= f.text_area :price, id:"item-price" %><br/>

<%# 下部ボタン %>
<%= f.submit "出品する", class:"sell-btn" %><br />
<%# /下部ボタン %>
<% end %>